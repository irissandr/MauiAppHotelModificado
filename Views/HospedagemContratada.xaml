<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.HospedagemContratada"
             BackgroundColor="#E8F5E9">

    <VerticalStackLayout Padding="20" Spacing="15" VerticalOptions="Center">

        <Label Text="Reserva Confirmada!" 
               FontSize="30"
               TextColor="#388E3C" 
               HorizontalTextAlignment="Center"/>

        <Frame CornerRadius="10" Padding="15" BackgroundColor="#C8E6C9">
            <StackLayout>
                <Label Text="Suíte Super Luxo" FontSize="20" TextColor="#2E7D32"/>
                <Label Text="Data de Check-in: 27/05/2024" FontSize="18"/>
                <Label Text="Data de Check-out: 30/05/2024" FontSize="18"/>
                <Label Text="Total: R$ 750,00" FontSize="18" FontAttributes="Bold"/>
            </StackLayout>
        </Frame>

        <Button Text="Voltar ao Início"
                BackgroundColor="#388E3C"
                TextColor="White"
                CornerRadius="20"
                Clicked="Button_Clicked" />

    </VerticalStackLayout>
</ContentPage>
